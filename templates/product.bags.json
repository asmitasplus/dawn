{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity-selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "collapsible-tabs-1": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Materials",
            "content": "<p>{{ product.metafields.my_fields.product_materials.value }}<\/p>",
            "page": "",
            "icon": "leather"
          }
        },
        "collapsible-tabs-2": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Dimensions",
            "content": "<p>{{ product.metafields.my_fields.bag_dimensions.value }}<\/p>",
            "page": "",
            "icon": "ruler"
          }
        },
        "collapsible-tabs-3": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Care Instructions",
            "content": "",
            "page": "shoe-care-instruction",
            "icon": "heart"
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "title",
        "subtitle",
        "price",
        "variant_picker",
        "quantity-selector",
        "buy_buttons",
        "description",
        "collapsible-tabs-1",
        "collapsible-tabs-2",
        "collapsible-tabs-3",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "hide_variants": true,
        "enable_video_looping": false
      }
    },
    "image-with-text": {
      "type": "image-with-text",
      "blocks": {
        "image-with-text-0": {
          "type": "heading",
          "settings": {
            "heading": "A new kind of bag."
          }
        },
        "image-with-text-1": {
          "type": "text",
          "settings": {
            "text": "<p>Unexpected shapes with smart details, functionality, a new luxury feel with a contemporary price point.<\/p>"
          }
        },
        "image-with-text-2": {
          "type": "button",
          "disabled": true,
          "settings": {
            "button_label": "Button label",
            "button_link": ""
          }
        }
      },
      "block_order": [
        "image-with-text-0",
        "image-with-text-1",
        "image-with-text-2"
      ],
      "settings": {
        "image": "shopify:\/\/shop_images\/imgwithtext.png",
        "height": "small",
        "color_scheme": "background-2",
        "layout": "text_first"
      }
    },
    "multi-column": {
      "type": "multicolumn",
      "blocks": {
        "multi-column-0": {
          "type": "column",
          "settings": {
            "title": "Free Shipping",
            "text": "<p>We offer free worldwide express shipping on all orders. You'll receive your order an estimated 1–4 days after shipment.<\/p>"
          }
        },
        "multi-column-1": {
          "type": "column",
          "settings": {
            "title": "Hassle-Free Exchanges",
            "text": "<p>Exchanges are free. Try from the comfort of your home. We will collect from your home, work or an alternative address. <\/p>"
          }
        }
      },
      "block_order": [
        "multi-column-0",
        "multi-column-1"
      ],
      "settings": {
        "title": "",
        "image_width": "full",
        "image_ratio": "adapt",
        "column_alignment": "left",
        "background_style": "none",
        "button_label": "",
        "button_link": "",
        "swipe_on_mobile": false
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false
      }
    }
  },
  "order": [
    "main",
    "image-with-text",
    "multi-column",
    "product-recommendations"
  ]
}
